<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 바깥쪽 테두리: 오른쪽과 아래쪽 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3D3D3D" />
        </shape>
    </item>

    <!-- 바깥쪽 테두리: 위쪽과 왼쪽 -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- 안쪽 테두리: 오른쪽과 아래쪽 -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#8B8B8B" />
        </shape>
    </item>

    <!-- 안쪽 테두리: 위쪽과 왼쪽 -->
    <item
        android:bottom="4dp"
        android:left="2dp"
        android:right="4dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#B1B1B1" />
        </shape>
    </item>

    <!-- 배경 색상 -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#C3C3C3" />
        </shape>
    </item>

</layer-list>