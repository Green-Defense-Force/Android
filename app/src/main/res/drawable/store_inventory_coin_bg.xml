<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 테두리 : 위쪽, 왼쪽 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9F9F9F" />
        </shape>
    </item>

    <!-- 테두리 : 아래쪽, 오른쪽 -->
    <item
        android:top="2dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#E4E4E4" />
        </shape>
    </item>

    <!-- 배경 -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#C3C3C3" />
        </shape>
    </item>
</layer-list>