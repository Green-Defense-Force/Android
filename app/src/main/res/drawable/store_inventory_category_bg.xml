<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 바깥쪽 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7E7E7E" />
        </shape>
    </item>

    <!-- 안쪽 테두리: 위쪽과 왼쪽 -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- 배경 -->
    <item
        android:bottom="2dp"
        android:left="4dp"
        android:right="2dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#C3C3C3" />
        </shape>
    </item>

</layer-list>