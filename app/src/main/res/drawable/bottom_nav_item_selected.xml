<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 바깥쪽 테두리: 오른쪽과 아래쪽 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
        </shape>
    </item>

    <!-- 바깥쪽 테두리: 위쪽과 왼쪽 -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#808080" />
        </shape>
    </item>

    <!-- 안쪽 테두리: 오른쪽과 아래쪽 -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#C1C1C1" />
        </shape>
    </item>

    <!-- 안쪽 테두리: 위쪽과 왼쪽 -->
    <item
        android:bottom="4dp"
        android:left="2dp"
        android:right="4dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- 배경 색상 -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#E3E3E3" />
        </shape>
    </item>

</layer-list>