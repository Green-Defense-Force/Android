<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ChallengeCameraActivity">

        <LinearLayout
            android:id="@+id/challengeTopbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/challenge_top"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/challengeTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/neodgm"
                android:text="챌린지 제목"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/rewardContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/neodgm"
                android:text="보상 내용"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cameraContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/black"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.64"
            app:layout_constraintTop_toBottomOf="@+id/challengeTopbar">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/challenge_top"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintTop_toBottomOf="@+id/cameraContainer">

            <Button
                android:id="@+id/backBtn"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/camera_side_btn"
                android:fontFamily="@font/neodgm"
                android:text="뒤로가기"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cameraBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/camera_btn" />

            <Button
                android:id="@+id/flashBtn"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/camera_side_btn"
                android:fontFamily="@font/neodgm"
                android:text="조명켜기"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>