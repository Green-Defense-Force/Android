<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/challengeDialogRetake"
        android:layout_width="330dp"
        android:layout_height="520dp"
        android:src="@drawable/challenge_dialog_bg_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="512dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/challengeDialogRetake"
        app:layout_constraintEnd_toEndOf="@+id/challengeDialogRetake"
        app:layout_constraintStart_toStartOf="@+id/challengeDialogRetake"
        app:layout_constraintTop_toTopOf="@+id/challengeDialogRetake">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/challengeDialogTopbar"
            android:layout_width="322dp"
            android:layout_height="32dp"
            android:background="@color/challenge_dialog">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/w95fa"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="Challenge"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/challengeCloseBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/challenge_dialog_bg_btn"
                android:fontFamily="@font/w95fa"
                android:text="X"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/challengePicture"
            android:layout_width="230dp"
            android:layout_height="325dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@color/black"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/challengeRetakeBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/challenge_dialog_bg_btn"
                android:fontFamily="@font/neodgm"
                android:text="재촬영"
                android:textSize="18sp" />

            <Button
                android:id="@+id/challengeOkBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/challenge_dialog_bg_btn"
                android:fontFamily="@font/neodgm"
                android:text="확 인"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>