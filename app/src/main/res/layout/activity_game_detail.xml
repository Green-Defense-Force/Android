<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameDetailActivity">

    <ImageView
        android:id="@+id/detailBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/game_bg_3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="318dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/neodgm"
            android:text="한강의"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/monsterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neodgm"
            android:text="쓰레기 봉지"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/hpFrameLayout"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/border_progressbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/monsterHp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:max="100"
                android:progress="100"
                android:progressTint="@android:color/holo_red_light"
                android:scaleY="6" />

        </FrameLayout>

        <ImageView
            android:id="@+id/monsterView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/game_garbage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/attackEffect"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/game_attack_effect1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/charAttackView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/game_char_attack1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.three.green_defense_force.customviews.CustomButton
        android:id="@+id/attackBtn"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_margin="30dp"
        android:background="@drawable/game_btn_before"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/attackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/neodgm"
        android:text="공 격"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/attackBtn"
        app:layout_constraintEnd_toEndOf="@+id/attackBtn"
        app:layout_constraintStart_toStartOf="@+id/attackBtn"
        app:layout_constraintTop_toTopOf="@+id/attackBtn" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/applesdgothicneoul"
        android:letterSpacing="0.1"
        android:text="Back"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>